<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
    "http://getahead.org/dwr/dwr30.dtd">
<dwr>
	<init>
		<converter id="localDateTime"
			class="org.directwebremoting.convert.LocalDateTimeConverter" />
	</init>

	<allow>
		
		<create creator="new" javascript="userService">
			<param name="class" value="br.com.projeto.model.User"/>
			<param name="class" value="br.com.projeto.service.UserService"/>	
			
		</create>
		<convert converter="bean" match="br.com.projeto.service.UserService"/>
		<convert converter="bean" match="br.com.projeto.model.User"/>
		<convert match = "java.lang.Exception" converter = "exception"/>
		  
		
		
	</allow>
</dwr>